<div class="content">
  {{#if err}}
  <br>
  <div class="card border-danger" style="width:90%;">
    <div class="card-body text-danger">
      <h5 class="card-title">Failed to upload</h5>
    </div>
  </div>
  {{else if message}}
  <br>
  <div class="card border-success mx-auto" style="width:90%;text-align:center">
    <div class="card-body text-success">
      <h5 class="card-title">SuccessFully changed</h5>
    </div>
  </div>
  {{/if}}
  <div class="row">
    <div class="col-md-4">
      <div class="card card-user">
        <div class="image">
          <img src="../../img/dashboard/bg5.jpg" alt="...">
        </div>
        <div class="card-body">
          <div class="author">
            <img class="avatar border-gray" src="../../img/dashboard/logo-small.png" alt="...">
            <h5 class="title">{{programmer.account.name}}</h5>
            <h5>{{programmer.username}}</h5>
            <h1>{{programmer.account.age}}</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card card-user">
        <div class="card-header">
          <h5 class="card-title">Edit Profile</h5>
        </div>
        <div class="card-body">
          <form action="/profileRouter/update" method="POST">
            <input type="hidden" name="oldemail" value="{{programmer.username}}" />
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Username</label>
                  <input type="text" name="name" class="form-control" placeholder="Username">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" name="email" class="form-control" placeholder="Email">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Password</label>
                  <input type="text" name="password" class="form-control" placeholder="Password">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Age</label>
                  <input type="Number" name="age" class="form-control" placeholder="Age">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="update ml-auto mr-auto">
                <button type="submit" class="btn btn-info btn-round">Update Profile</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!--   Core JS Files   -->
<script src="../../script/external/jquery.min.js"></script>
<script src="../../script/external/bootstrap.min.js"></script>
<!-- Control Center for Now Ui Dashboard: for mobile -->
<script src="../../script/paper-dashboard.min.js" type="text/javascript"></script>