<div class="container challenges-pos">
  <h3 class="text-center">Quiz </h3>
  <br>
  <div class="row">
    <div class="col-md-4 card">
      <img class="card-img-top" src="../../img/dashboard/challenges/q1.jpeg" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">Level {{data.level}}</h5>
        {{#ifCond data.level}}
        <a href="/dashBoardRouter/quizQuestion" class="btn btn-outline-info">Take challenge</a>
        {{else}}
        <button class="btn btn-outline-info" disabled>Comming soon..</button>
        {{/ifCond}}
      </div>
    </div>
    <div class="col-md-8" style="padding:0px;">
      <h5>Text result</h5>
      <div class="card" style="height:400px;overflow:scroll;">
        <div class="card-body">
          {{#each data.quizTest}}
          <div class="card text-center">
            <div class="card-header bg-info text-white">Test {{quizno}}</div>
            <div class="card-body">
              <h5 class="card-title">Points {{points}}</h5>
              {{#ifMark1 points}}
              <p class="card-text">Why this very poor performance ?</p>
              {{/ifMark1}}
              {{#ifMark2 points}}
              <p class="card-text">Poor performance. Work Hard</p>
              {{/ifMark2}}
              {{#ifMark3 points}}
              <p class="card-text">Good Keep it up </p>
              {{/ifMark3}}
            </div>
            <div class="card-footer text-muted">
              {{time}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <!--   Core JS Files   -->
  <script src="../../script/external/jquery.min.js"></script>
  <script src="../../script/external/bootstrap.min.js"></script>
  <!-- Control Center for Now Ui Dashboard: for mobile -->
  <script src="../../script/paper-dashboard.min.js" type="text/javascript"></script>